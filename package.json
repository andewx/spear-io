{
  "name": "spear",
  "version": "1.0.0",
  "description": "Synthetic Precipitative Environmental Attenuation Radar Tool",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && npm run copy:templates",
    "copy:templates": "mkdir -p dist/templates && cp -r src/templates/* dist/templates/",
    "start": "node dist/index.js",
    "start:debug": "node --inspect=9229 dist/index.js",
    "debug": "node --inspect-brk=9229 dist/index.js"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "canvas": "^3.2.0",
    "ejs": "^3.1.10",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
